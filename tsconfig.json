{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "composite": true,
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["**/temp/", "**/.*/", "**/lib", "**/node_modules"]
}
